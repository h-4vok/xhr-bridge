{
  "name": "xhr-bridge",
  "version": "1.0.3",
  "description": "XHR Bridge Pattern that allows you to decouple your codebase from the actual XHR implementation of your choice. You will need an XHR-Bridge implementation of the XHR library of your choosing.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "bundle:prepare": "npm run all-checks && npm run code-coverage && npm run build",
    "bundle:finish": "copy \"package.dist.json\" \"dist/package.json\" && copy \"LICENSE\" \"dist/LICENSE\" && copy \"README.md\" \"dist/README.md\"",
    "build": "npx babel src --out-dir dist",
    "watch": "npx babel src --watch --out-dir dist",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --config jest.config.json --watch",
    "test:watchAll": "jest --config jest.config.json --watchAll",
    "code-coverage": "jest --config jest.config.json --collect-coverage",
    "prettier": "pretty-quick --staged --verbose --pattern src/**/*.js",
    "prettier:full": "pretty-quick --branch master --verbose --pattern src/**/*.js",
    "prettier:ci-check": "prettier --check \"src/**/*.js\"",
    "lint": "eslint src/**/*.js --ignore-path .gitignore",
    "all-checks": "run-s test lint prettier prettier:ci-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run all-checks"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h-4vok/xhr-bridge.git"
  },
  "keywords": [
    "xhr",
    "api",
    "fetch",
    "superagent",
    "axios"
  ],
  "author": "Christian Guzm√°n",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/h-4vok/xhr-bridge/issues"
  },
  "homepage": "https://github.com/h-4vok/xhr-bridge#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "dependencies": {
    "@types/jest": "^24.0.17",
    "uuid": "^3.3.2"
  }
}
